{% include 'widgets/admin_header_comments.twig' %}
	<div class="filter">
    <form method="get" id="searchz"  action="{{base_url}}admin/comments">
			<input name="q" type="text" value="{{q}}" />
      <select name="t" class="select-onload" data-selected="{{t|default('rm')}}">
				<option value="rm" selected>all</option>
        <option value="seen" >seen</option>
        <option value="new" >new</option>
				<option value="flagged">flagged</option>
      </select>
      <button type="submit"class="submit">Submit</button>
    </form>
  </div>
  <table border="1" id="TBL" align="center" class="adm-paginate" data-type="{{form_type}}" data-content="comments" data-page="1" data-min="12"  data-q="{{q}}" data-c="{{c}}">
		<thead>
			<tr>
				<th width="150" height="60">
					<div class="bulk-widget">
						<p class="checkbox radius">
							<input type="checkbox" name="example" id="toggle_multi" value="1" />
							<label for="toggle_multi"></label>
						</p>
						
						<select name="bulk_action">
							<option value="invalid" selected>select</option>
							<option value="approve">seen</option>
							<option value="pending" >not seen</option>
							<option value="trash" >trash</option>
						</select>
					 
						<button type="button" id="submit_bulk">Go</button>
					</div>
				</th>
				<th width="850">comment</th>
				<th width="114">username</th>
				<th width="168">ban</th>
				<th width="168">trash</th>
			</tr>
		</thead>
    <tbody>
		{% include 'partials/admin_tbl3.twig' %}
		</tbody>
	</table>
	<div class="load-container load8" data-paginater-loading>
		<div class="loader">Loading...</div>
	</div>	
	<div class="trigger-load"></div>
