{% include 'mobile/widgets/header.twig' %}
<div class="userBox">

<h1>{{user.user_name}}</h1>

<div class="thumb"><img class="avatar" src="{{user.large|default(base_url ~ 'static/images/defultuser.png')}}" alt="{{user.user_name}}'s profile picture"></div>
<div class="navigation">
	<a href="{{base_url}}user/change_avatar">change avatar</a> <span>|</span> <a href="{{base_url}}user/change_password">password</a> 
</div>
</div>
<div id="loginform">
	<div class="box">
		<form method="post" class="contains-file" action="{{base_url}}api/change_avatar" data-callback="mobAv">
			<div class="upload">
				<span>New Avatar </span><br/>
				<input type="file" name="userfile" accept="image/*" class="form-control input-file">
				<br/>
			</div>
			<button type="submit" class="submit">Submit</button>
		</form>
	</div>
</div>
