{% include 'mobile/widgets/header.twig' %}
<div id="MEDIA">
	<div class="titleBox">
		<img src="{{mixtape.small}}" class="thumb">
		<h1>
			{{mixtape.title}}<br> 
			<span>
				<a href="{{base_url}}artists/{{mixtape.artist_uri}}">{{mixtape.artist_name}}</a>
				{% if mixtape.featuring is not empty%}
				Ft. {%for item in mixtape.featuring%}<a href="{{base_url}}artists/{{item.uri}}">{{item.name}}</a> {%endfor%}
				{%endif%}
			</span>
		</h1>
		</a> 
		<div class="right mobile-respond">
			<div class="favorite">
				<a href="#" class="icon {{user_fave}}" data-type="mixtape" data-id="{{mixtape.id}}"></a> 
			</div>
			<div class="rating">
				<a href="#" class="icon {{user_like}}" data-type="mixtape" data-id="{{mixtape.id}}"></a> 
				<div class="text">{{mixtape.likes|default('0')}}</div>
			</div>
		</div>
	</div>
	<div class="share">
	 <a href="https://www.facebook.com/sharer/sharer.php?u={{canonical|url_encode}}" target="_blank" class="facebook">facebook share</a> 
	 {%set tw_title = mixtape.title ~ ' by ' ~ mixtape.artist_name %}
	 <a href="http://twitter.com/share?text={{tw_title|url_encode|trim}}&url={{canonical|url_encode}}&hashtags=wixtape" target="_blank" class="twitter">twitter share</a>
	</div>
	<div class="player"> 
		<div class="progression-playlist-height responsive-wrapper responsive-audio" style="padding-bottom:342px;">
			<audio class="progression-playlist progression-skin progression-fancy progression-audio-player" controls preload="none">
				{% for item in mixtape.tracks %}
				<source data-src="audio/mpeg" src="http://audio1.mixtape.s3-website-us-east-1.amazonaws.com/{{item.audio_file}}" title="{{item.title}}" type="audio/mpeg"/>
				{% endfor %}
			</audio>
		</div> 
		{% if mixtape.youtube is not empty %}
		<iframe width="420" height="315" class="youtube" src="https://www.youtube.com/embed/{{mixtape.youtube}}" frameborder="0" allowfullscreen style="margin-top:20px;max-width:100%;"></iframe>
		{% endif %}
	</div>
	<div class="informationBox">
		<div class="description">
			{{mixtape.description|nl2br|default('No description available')|raw}}
		</div>
		<div class="smallinfo">
			Added by: {{mixtape.user}} <span>&#124;</span> Artist: <a href="{{base_url}}artists/{{mixtape.artist_uri}}">{{mixtape.artist_name}}</a><br/>
			{{mixtape.views|default('0')}} views <span>&#124;</span> <span data-livestamp="{{mixtape.timestamp}}"></span>
		</div>
	</div>
	{% include 'mobile/widgets/related.twig' %}
	<div class="comments">
		<div class="comments-inner">
		<div class="textform">
			<form method="post" action="{{base_url}}api/comment" data-callback="commentPosted">
				<input type="hidden" name="type" value="mixtape" />
				<input type="hidden" name="track_id" value="{{mixtape.id}}" />
				<textarea id="comment" name="comment" cols="25" rows="1" aria-describedby="form-allowed-tags" aria-required="true" class="textarea" placeholder="post a comment..."></textarea>
				{% if user == false %}
				<div class="notlogged"><a href="{{base_url}}login">signin</a> or <a href="{{base_url}}create_account">signup</a> to leave a comment.</div>
				{% else %}
				<button type="submit" name="comment" class="submit">Post Comment</button>
				{% endif %}
			</form>
		</div>
		<div class="commentBox paginate-comments" data-type="mixtape" data-id="{{mixtape.id}}" data-page="1" data-min="24">
			
		</div>
		<div class="load-container load8" data-paginater-loading>
			<div class="loader">Loading...</div>
		</div>
		<div class="trigger-load"></div>
		</div>
	</div>
</div>
<script type="text/javascript">
	var t_type= 'mixtape';
	var t_id  = '{{mixtape.id}}';
</script>
{% include 'mobile/widgets/footer.twig' %}