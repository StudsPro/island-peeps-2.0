{% include 'mobile/widgets/header.twig' %}
<div id="MEDIA">
	<div class="titleBox">
		<img src="{{single.small}}" class="thumb">
		<h1>
			{{single.title}}<br> 
			<span>
				<a href="{{base_url}}artists/{{single.artist_uri}}">{{single.artist_name}}</a>
				{% if mixtape.featuring is not empty%}
				Ft. {%for item in mixtape.featuring%}<a href="{{base_url}}artists/{{item.uri}}">{{item.name}}</a> {%endfor%}
				{%endif%}
			</span>
		</h1>
		</a> 
		<div class="right mobile-respond">
			<div class="favorite">
				<a href="#" class="icon {{user_fave}}" data-type="single" data-id="{{single.id}}"></a> 
			</div>
			<div class="rating">
				<a href="#" class="icon {{user_like}}" data-type="single" data-id="{{single.id}}"></a> 
				<div class="text">{{single.likes|default('0')}}</div>
			</div>
		</div>
	</div>
	<div class="share">
	 <a href="https://www.facebook.com/sharer/sharer.php?u={{canonical|url_encode}}" target="_blank" class="facebook">facebook share</a> 
	 {%set tw_title = single.title ~ ' by ' ~ single.artist_name %}
	 <a href="http://twitter.com/share?text={{tw_title|url_encode|trim}}&url={{canonical|url_encode}}&hashtags=wixtape" target="_blank" class="twitter">twitter share</a>
	</div>
	<div class="player"> 
		<div class="responsive-wrapper responsive-audio">
			<audio class="progression-single progression-skin progression-fancy progression-audio-player" controls preload>
				<source type="audio/mpeg" src="http://audio1.mixtape.s3-website-us-east-1.amazonaws.com/{{single.audio_file}}" />
			</audio>
		</div> 
		{% if single.youtube is not empty %}
		<iframe width="420" height="315" class="youtube" src="https://www.youtube.com/embed/{{single.youtube}}" frameborder="0" allowfullscreen style="margin-top:20px;max-width:100%"></iframe>
		{% endif %}
	</div>
	<div class="informationBox">
		<div class="description">
			{{single.description|nl2br|default('No description available')|raw}}
		</div>
		<div class="smallinfo">
			Added by: {{single.user}} <span>&#124;</span> Artist: <a href="{{base_url}}artists/{{single.artist_uri}}">{{single.artist_name}}</a><br/>
			{{single.views|default('0')}} views <span>&#124;</span> <span data-livestamp="{{single.timestamp}}"></span>
		</div>
	</div>
	{% include 'mobile/widgets/related.twig' %}
	<div class="comments">
		<div class="comments-inner">
			<div class="textform">
				<form method="post" action="{{base_url}}api/comment" data-callback="commentPosted">
					<input type="hidden" name="type" value="single" />
					<input type="hidden" name="track_id" value="{{single.id}}" />
					<textarea id="comment" name="comment" cols="25" rows="1" aria-describedby="form-allowed-tags" aria-required="true" class="textarea" placeholder="post a comment..."></textarea>
					{% if user == false %}
					<div class="notlogged"><a href="{{base_url}}login">signin</a> or <a href="{{base_url}}create_account">signup</a> to leave a comment.</div>
					{% else %}
					<button type="submit" name="comment" class="submit">Post Comment</button>
					{% endif %}
				</form>
			</div>
			<div class="commentBox paginate-comments" data-type="single" data-id="{{single.id}}" data-page="1" data-min="24">
				
			</div>
			<div class="load-container load8" data-paginater-loading>
				<div class="loader">Loading...</div>
			</div>
			<div class="trigger-load"></div>
		</div>
	</div>
	
</div>
<script type="text/javascript">
	var t_type= 'single';
	var t_id  = '{{single.id}}';
</script>
{% include 'mobile/widgets/footer.twig' %}