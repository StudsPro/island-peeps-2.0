{% spaceless %}
{% include 'widgets/nav.twig' %}
<div id="MEDIA">
	<div class="titleBox">
		<div class="left">
			<img src="{{mixtape.small}}" class="thumb">
			<h1>
				{{mixtape.title}} &#8212; 
				<a href="{{base_url}}artists/{{mixtape.artist_uri}}">{{mixtape.artist_name}}</a> 
				{% if mixtape.featuring is not empty%}
				Ft. {%for item in mixtape.featuring%}<a href="{{base_url}}artists/{{item.uri}}">{{item.name}}</a> {%endfor%}
				{%endif%}
			</h1>
		</div>
		<div class="right">
			<div class="favorite">
				<a href="#" class="icon {{user_fave}}" data-type="mixtape" data-id="{{mixtape.id}}"></a> 
				<div class="text">favorite</div>
			</div>
			<div class="download">
				 <a href="{% if mixtape.download == 1 %}{{base_url}}download?type=mixtape&id={{mixtape.id}}{%else%}#{%endif%}" target="_blank" rel="nofollow" class="icon {% if mixtape.download == 0 %}NOdownload{%endif%}"></a> 
				<div class="text">download</div>
			</div>
			{% if mixtape.purchase != '' %}
			<div class="buy">
				 <a href="{{mixtape.purchase}}" class="icon" target="_blank" ></a> 
				<div class="text">buy</div>
			</div>
			{% endif %}
			<div class="sharing">
				<div>
					<div class="fb-like" data-href="{{url}}" data-layout="box_count" data-action="like" data-show-faces="true" data-share="false"></div>
				</div>
				<div>
					<a href="https://twitter.com/share" class="twitter-share-button" data-count="vertical" data-dnt="true"></a>
				</div>
				<div>
					<div class="g-plus" data-action="share" data-annotation="vertical-bubble" data-height="60"></div>
				</div>
			</div>
			<div class="rating">
				<a href="#" class="icon {{user_like}}" data-type="mixtape" data-id="{{mixtape.id}}"></a> 
				<div class="text">{{mixtape.likes|default('0')}}</div>
			</div>
		</div>
	</div>
	<div class="player"> 
		<div class="progression-playlist-height responsive-wrapper responsive-audio" style="padding-bottom:342px;">
			<audio class="progression-playlist progression-skin progression-fancy progression-audio-player" controls preload="none">
				{% for item in mixtape.tracks %}
				<source data-src="audio/mpeg" src="http://audio1.mixtape.s3-website-us-east-1.amazonaws.com/{{item.audio_file}}" title="{{item.title}}" type="audio/mpeg"/>
				{% endfor %}
			</audio>
		</div>  
		{% if mixtape.youtube is not empty %}
		<iframe width="420" height="315" class="youtube" src="https://www.youtube.com/embed/{{mixtape.youtube}}" frameborder="0" allowfullscreen></iframe>
		{% endif %}
	</div>
<div class="informationBox">
		<div class="description">
			{{mixtape.description|nl2br|default('No description available')|raw}}
		</div>
		<div class="smallinfo">
			Added by: {{mixtape.user}} <span>&#124;</span>
			Artist: <a href="{{base_url}}artists/{{mixtape.artist_uri}}">{{mixtape.artist_name}}</a> <span>&#124;</span> {{mixtape.views|default('0')}} views <span>&#124;</span> <span data-livestamp="{{mixtape.timestamp}}"></span> <span>&#124;</span>
			Embed: <input class="embed" type="text"  id="iframe-embed-code" rows="5" cols="70" spellcheck="false" value='<iframe src="{{base_url}}embed/mixtape/{{mixtape.id}}" width="100%" height="461" frameBorder="0" style="max-width: 100%" scrolling="no" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>' onclick="this.focus();this.select()"/>
		</div>
	</div>
	{% include 'widgets/related.twig' %}
	<div class="comments">
		<div class="contain">
			<form method="post" action="{{base_url}}api/comment" data-callback="commentPosted">
				<input type="hidden" name="type" value="mixtape" />
				<input type="hidden" name="mixtape_id" value="{{mixtape.id}}" />
				<div class="textform">
					<textarea id="comment" name="comment" cols="145" rows="1" aria-describedby="form-allowed-tags" aria-required="true" class="textarea" placeholder="post a comment..."></textarea>
				</div>
				{% if user == false %}
				<div class="notlogged"><a data-remodal-target="login" href="#">signin</a> or <a data-remodal-target="signup" href="#">signup</a> to leave a comment.</div>
				{% else %}
				<button type="submit" name="comment" class="submit">Post Comment</button>
				{% endif %}
			</form>
		</div>
		<div class="commentBox paginate-comments" data-type="mixtape" data-id="{{mixtape.id}}" data-page="1" data-min="24">

		</div>
		<div class="load-container load8" data-paginater-loading>
			<div class="loader">Loading...</div>
		</div>	
		<div class="trigger-load"></div>
	</div>
</div>
<script type="text/javascript">var t_type= 'mixtape';var t_id  = '{{mixtape.id}}';</script>
