{% include 'widgets/nav.twig' %}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<ul class="breadcrumb breadcrumb-arrows breadcrumb-default">
				<li><a href="{{base_url}}admin"><i class="fa fa-home fa-lg"></i></a></li>
				<li><a href="{{base_url}}admin/masterlist">Masterlist</a></li></li>
				<li><a href="#">Bulk Add</a></li>
			</ul>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="col-md-3">
						<h3 class="panel-title"> Add Profile</h3>
					</div>
					<div class="col-md-9 text-right"> 
						<a class="btn btn-info add-field" href="#">Add More Field</a>
					</div>
				</div> 
				<form method="post" action="{{base_url}}admin/api/bulk_add" class="form-horizontal contains-file" data-callback="tmpCB">
					<input type="hidden" name="num_rows" value="1" />
					<div class="panel-body">  
						<table class="table table-striped table-bordered dataTable no-footer" id="" border="0" cellpadding="0" cellspacing="0">
							<thead>
								<tr>
									<th width="15%">Name</th>
									<th width="20%">Region</th>
									<th width="10%">User Kind</th>
									<th width="10%">Image</th>
									<th width="10%">Date Of Birth</th>
									<th width="10%">Profile Details</th>
									<th width="10%">Status</th>
									<th width="5%">Remove</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<input size="5" name="title[]" class="form-control input-md" value="" type="text">
									</td>
									<td>
										<select name="regions[][]" class="form-control input-md" multiple="multiple">
											{% for item in regions %}
											<option value="{{item.id}}">{{item.name}}</option>
											{% endfor %}
										</select>   
									</td>
									<td>
										<select name="type_id[]" class="form-control input-md" tabindex="1">
											<option value="1">People profile</option>
											<option value="3">Fun facts</option>
											<option value="2">Me Me</option>
										</select>
									</td>
									<td>
										<input class="form-control input-md" name="file_0" type="file">
										<br>
										<span style="color:#009100">Image dimension must be 1200 X 900.</span>
									</td>
									<td style="width:15%;">
										{% include 'widgets/yearinput2.twig' %}
									</td>
									<td>
										<textarea name="description[]" rows="3" cols="50" class="form-control input-md"></textarea>
									</td>
									<td>
										<select name="status[]"class="form-control input-md" tabindex="1">
											<option value="1">Available</option>
											<option value="2">Pending</option> 
										</select>
									</td>
									<td>-</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="panel-footer">
						<div class="form-group">
							<div class="col-sm-offset-2 col-md-5">
								<button type="submit" class="btn btn-primary">Save</button>     
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-12" style="min-height: 50px; opacity:0">&nbsp;</div>
	</div>
</div>
<script>
function tmpCB(data)
{
	if(data.error==0){
		window.location = window.location.origin+'/admin/masterlist'
	}else{
		sk.alert(data.message,'error');
	}
}
</script>
{% include 'widgets/footer.twig' %}