<!doctype html>
	<html lang="en">
	<head>
	<title>Edit Track</title>
	<meta name="csrf" content="{{csrf}}" />
	<link rel="stylesheet" href="{{base_url}}static/admin.css" />
	<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.3.0/animate.min.css" />
</head>

<body>

<div align="center">
	<form method="post" action="{{base_url}}adminAPI/edit_track" data-callback="editItem" class="contains-file">
		<input type="hidden" name="id" value="{{track.id}}" />
		<table border="1" cellpadding="14" cellspacing="14" id="logSignup">
		  <tr>
		    <td valign="top"><b>Title</b></td>
		    <td  align="left"><input type="text" name="title" value="{{track.title}}" class="inputBtn" /></td>
	     </tr>
			<tr>
				<td valign="top"><b>Thumb</b></td>
			  <td align="left">
					<input type="file" name="uploaded_image" class="image-e" accept="image/*">
          <img src="{{track.medium|default(base_url ~ 'static/images/defultuser.png')}}" class="thumb">
				</td>
			</tr>
			<tr>
			  <td valign="top"><b>Artist</b></td>
			  <td align="left"><input type="text" name="artist" value="{{track.artist}}" class="inputBtn" /></td>
		  </tr>
			<tr>
			  <td valign="top"><b>Description</b></td>
			  <td  align="left"><textarea name="description" class="inputBtn" style="height: 100px;">{{track.description}}</textarea></td>
		  </tr>
			<tr>
			  <td valign="top"><b>Featured Artist (optional)</b></td>
			  <td align="left"><input type="text" name="featuring" value="{{track.featuring}}" class="inputBtn" /></td>
		  </tr>
			<tr>
			  <td valign="top"><b>Youtube (optional)</b></td>
			  <td align="left"><input type="text" name="youtube" value="{%if track.youtube is not empty %}https://www.youtube.com/watch?v={{track.youtube}}{%endif%}" class="inputBtn" /></td>
		  </tr>
			<tr>
			  <td valign="top"><b>Buy Link (optional)</b></td>
			  <td align="left"><input type="text" name="purchase" value="{{track.purchase}}" class="inputBtn" /></td>
		  </tr>
			<tr>
			  <td colspan="2" valign="top" align="left"><input type="checkbox" name="download" value="1" {% if track.download == 1 %}checked{%endif%}> &nbsp; allow downloads &nbsp; <input type="checkbox" name="in_app" value="1" {%if track.in_app== 1 %}checked{%endif%}> &nbsp;allow in our app </td>
		  </tr>
			<tr>
				<td colspan="2" valign="top"><button type="submit" class="logSignupSubmit">Save</button></td>
			</tr>
		</table>
  </form>
</div>	
{% include 'widgets/admin_footer.twig' %}