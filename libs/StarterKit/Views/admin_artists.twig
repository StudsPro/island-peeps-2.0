{% include 'widgets/admin_header_artists.twig' %}
 <div class="filter">
    <form method="get" id="searchz"  action="{{base_url}}admin/artists">
			<input name="q" type="text" value="{{q}}" />
			<select name="t" class="select-onload" data-selected="{{t|default('rm')}}">
				<option value="rm">all</option>
				<option value="published" >published</option>
				<option value="pending" >pending</option>
			</select>
			<button type="submit"class="submit">Submit</button>
    </form>
  </div>
  <table border="1" id="TBL" align="center" class="adm-paginate" data-type="{{form_type}}" data-content="artists" data-page="1" data-min="12"  data-q="{{q}}" data-c="{{c}}">
		<thead>
			<tr>
				<th width="150" height="60">
					<div class="bulk-widget">
						<p class="checkbox radius">
							<input type="checkbox" name="example" id="toggle_multi" value="1" />
							<label for="toggle_multi"></label>
						</p>
						
						<select name="bulk_action">
							<option value="invalid" selected>select</option>
							<option value="approve">publish</option>
							<option value="pending" >unpublish</option>
							<option value="trash" >trash</option>
						</select>
					 
						<button type="button" id="submit_bulk">Go</button>
					</div>
				</th>
				<th width="134">thumb</th>
				<th width="150">edit</th>
				<th width="854">artist</th>
				<th width="130">trash</th>
			</tr>
		</thead>
    <tbody>
		{% include 'partials/admin_tbl2.twig' %}
		</tbody>
	</table>
	<div class="load-container load8" data-paginater-loading>
		<div class="loader">Loading...</div>
	</div>	
	<div class="trigger-load"></div>
{% include 'widgets/admin_footer.twig' %}