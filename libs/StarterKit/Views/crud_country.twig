{% include 'widgets/nav.twig' %}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<ul class="breadcrumb breadcrumb-arrows breadcrumb-default">
				<li><a href="{{base_url}}admin"><i class="fa fa-home fa-lg"></i></a></li>
				<li><a href="{{base_url}}admin/countries">Countries</a></li>
				<li><a href="#">{{action}}</a></li>
			</ul>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">  
				<div class="panel-heading">
					<h3 class="panel-title">{{action}}</h3>
				</div>
				<form method="post" class="contains-file form-horizontal" action="{{base_url}}admin/api/country{%if item is defined %}?id={{item.id}}{%endif%}" data-callback="countryAE">
					<div class="panel-body">  
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Country Name <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="name" value="{{item.name}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="title" class="col-md-2 control-label">Description</label>
							<div class="col-md-5">
								<textarea name="description" rows="8" cols="10" class="form-control input-md">{{item.description|raw}}</textarea>   
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Country Banner Name <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="title_banner" value="{{item.title_banner}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Country Title Text <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="title" value="{{item.title}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="title" class="col-md-2 control-label">Independence Day</label>
							{% include 'widgets/yearinput.twig' %}
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Longitude <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="longitude" value="{{item.longitude}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Latitude <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="latitude" value="{{item.latitude}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Image <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="file" name="img_file" class="form-control input-md" />
								{% if item is defined %}
								<div class="col-md-3 text-center  " id="raggionmapimg">
									<img src="{{item.img}}" width="80" style="background:#000;">
								</div>
								{% endif %}
								<br/>
								<span style="color:#009100">Image dimension must be 490 X 300.</span>  
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Map Image <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="file" name="map_file" class="form-control input-md" />
								{% if item is defined %}
								<div class="col-md-3 text-center  " id="raggionmapimg">
									<img src="{{item.map_img}}" width="80" style="background:#000;">
								</div>
								{% endif %}
							</div>
						</div>
						<div class="container">
							<div class="control-group">
								<div class="col-md-7">
									<h4 style="text-align:center">Flag Content</h4>
								</div>
							</div>
						</div>
						
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Flag Image <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="file" name="flag_file" class="form-control input-md" />
								{% if item is defined %}
								<div class="col-md-3 text-center  " id="raggionmapimg">
									<img src="{{item.flag_img}}" width="80" style="background:#000;">
								</div>
								{% endif %}
								<br>
								<span style="color:#009100">Image dimension must be 300 X 180.</span>    
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Motto <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="motto" value="{{item.motto|raw}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Anthem <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="anthem" value="{{item.anthem|raw}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> National Dish <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="national_dish" value="{{item.national_dish|raw}}" class="form-control input-md" />
							</div>
						</div>
						<div class="container">
							<div class="control-group">
								<div class="col-md-7">
									<h4 style="text-align:center">Coat Of Arms Circle Content</h4>
								</div>
							</div>
						</div>
						<div class="form-group">
							
							<label for="name" class="col-md-2 control-label"> Cover Image <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="file" name="cover_file" class="form-control input-md" />
								{% if item is defined %}
								<div class="col-md-3 text-center  " id="raggionmapimg">
									<img src="{{item.cover_img}}" width="80" style="background:#000;">
								</div>
								{% endif %}
								<br>
								<span style="color:#009100">Image dimension must be 200 X 200.</span>   
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Capital <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="capital" value="{{item.capital}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Language <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="language" value="{{item.language}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 control-label"> Population <span class="require">*</span></label>
							<div class="col-md-5">
								<input type="text" name="population" value="{{item.population}}" class="form-control input-md" />
							</div>
						</div>
						<div class="form-group">
							<label for="title" class="col-md-2 control-label">Ethnic Data</label>
							<div class="col-md-5">
								<textarea name="ethnic_data" rows="8" cols="10" class="form-control input-md">{{item.ethnic_data|raw}}</textarea>   
							</div>
						</div>

						<div class="form-group" id="rejectblock">
							<label for="title" class="col-md-2 control-label">Status<span class="require">*</span></label>        
							<div class="col-md-5">
								<select name="status" id="status"  tabindex="1" class="form-control input-md" data-selected="{{item.status}}">
								<option value="1">AVAILABLE</option>
								<option value="2">PENDING</option>
								<option value="3">READY</option>
								<option value="4">USED</option>
								</select>
							</div>
						</div> 							 
					</div>  
					<div class="panel-footer">
						<div class="form-group">
							<div class="col-sm-offset-2 col-md-5">
								<button type="submit" class="btn btn-primary btn-block">Save</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script>
function countryAE(data)
{
	if(data.error == 0){
		sk.alert('The operation completed successfully.','success');
	}else{
		sk.alert(data.message,'error');
	}
}
</script>
{% include 'widgets/footer.twig' %}