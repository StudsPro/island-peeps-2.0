{% include 'widgets/nav.twig' %}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<ul class="breadcrumb breadcrumb-arrows breadcrumb-default">
				<li><a href="{{base_url}}admin"><i class="fa fa-home fa-lg"></i></a></li>
				<li><a href="#">Suggestions</a></li>
			</ul>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="col-md-12" style="padding-top: 2px;">  
						<div class="col-md-3 text-right"> 
							<h4 style="margin-top:6px">Search in master list</h4>
						</div>
						 <div class="col-md-4" style="margin-left: -15px;">
							 <input autocomplete="off" class="form-control input-md ui-autocomplete-input" id="mastername" value="" name="mastername" type="text">
								<input id="master_id" name="master_id" type="hidden">
						</div>  
						<div class="col-md-4" style="margin-left: -15px;">
							 <div id="showmsg"> </div>
						</div>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="panel-body">
					<table id="newtable"  class="table table-striped table-bordered dataTable no-footer dt-responsive" cellspacing="0" width="100%" data-perpage="{{admin.perpage}}">
						<thead>
							<tr>						
								<th width="10%" data-type="numeric" data-sort-initial="true">S.No</th>
								<th width="20%">Profile Title</th>
								<th width="10%">User Kind</th>
								<th width="20%">Region</th>
								<th width="10%">User Name</th>
								<th width="10%">Email</th>  
								{% if hide_extra is not defined %}
								<th width="10%" data-hide="phone" data-sort-initial="false">Edit</th>
								<th data-hide="phone" width="10%">
									<input type="checkbox" onclick="$('input[name*=\'selected\']').attr('checked', this.checked);" />Select
								</th>
								<th width="5%">Preview</th>
								{% endif %}
							</tr>
						</thead>
						<tbody>
							{% include 'partials/suggestion_row.twig' %}
						</tbody>
					</table>
				</div>
				<div class="clearfix">&nbsp;</div>   
				<div class="panel-footer text-right">
					{% if hide_extra is not defined %}
					<button type="button" class="btn btn-success bulk-suggest" data-cmd="add">Add To Masterlist</button>
					<button type="button" class="btn btn-warning bulk-suggest" data-cmd="del">Delete</button>
					{% endif %}
				</div>	
			</div>		
		</div>
	</div>
</div>
