{%spaceless%}
{% include 'widgets/nav.twig' %}
<div class="TbigTitle">{{query}}</div>
<div class="TArtistSearch">
	{% if results.artist is not empty %}<a href="{{base_url}}artists/{{results.artist.name}}" title="{{results.artist.name}}"><img src="{{results.artist.small|default(base_url~'static/images/defultuser.png')}}"></a><br/>matching artist <span>&ldquo;{{results.artist.name}}&rdquo;</span>{%else%}no artists matching keyword: <span>&ldquo;{{query}}&rdquo;</span>{%endif%}
</div>
<div id="search-singles" class="paginate-search {% if singles|length < 6 %}disabled{%endif%}" data-type="search-singles" data-page="1" data-min="6" data-query="{{query}}" disabled>
	<table border="1" align="center"  >
		<thead>
			<tr>
				<th class="Ttitle">title</th>
				<th class="Tthumb">thumb</th>
				<th class="Tfavorite">favorite</th>
				<th class="Trate">rate</th>
				<th class="Tdownload">download</th>
			</tr>
			<tr>
				<th colspan="5" class="Tlower">singles <a href="#" class="right toggle">view all</a></th>
			</tr>
		</thead>
		<tbody data-paginater-target>
		{% set singles = results.singles %}
		{% if singles|length > 0 %}
		{% include 'partials/single_row.twig' %}
		{% else %}
		<tr>
			<td colspan="5"><div class="none">none was found</div></td>
		</tr>
		{% endif %}
		</tbody>
	</table>
	<div class="load-container load8" data-paginater-loading>
		<div class="loader">Loading...</div>
	</div>	
	<div class="trigger-load"></div>
</div>
<div id="search-mixtapes" class="paginate-search {% if mixtapes|length < 6 %}disabled{%endif%}" data-type="search-singles" data-page="1" data-min="6" data-query="{{query}}" disabled>
	<table border="1" align="center"  >
		<thead>
			<tr>
				<th class="Ttitle">title</th>
				<th class="Tthumb">thumb</th>
				<th class="Tfavorite">favorite</th>
				<th class="Trate">rate</th>
				<th class="Tdownload">download</th>
			</tr>
			<tr>
				<th colspan="5" class="Tlower">mixtapes <a href="#" class="right toggle">view all</a></th>
			</tr>
		</thead>
		<tbody data-paginater-target>
		{% set mixtapes = results.mixtapes %}
		{% if mixtapes|length > 0 %}
		{% include 'partials/mixtape_row.twig' %}
		{% else %}
		<tr>
			<td colspan="5"><div class="none">none was found</div></td>
		</tr>
		{% endif %}
		</tbody>
	</table>
	<div class="load-container load8" data-paginater-loading>
		<div class="loader">Loading...</div>
	</div>	
	<div class="trigger-load"></div>
</div>
{% include 'widgets/footer.twig' %}
{%endspaceless%}