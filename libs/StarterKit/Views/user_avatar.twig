{% spaceless %}
{% include 'widgets/nav.twig' %}
<div class="userBox">
	<h1>{{user.user_name}}</h1>
	<div class="thumb">
		<img class="avatar" src="{{user.large|default(base_url ~ 'static/images/defultuser.png')}}" alt="{{user.user_name}}'s profile picture">
	</div>
	<div class="navigation">
		<a href="{{base_url}}user/change_avatar">change avatar</a> <span>|</span> <a href="{{base_url}}user/change_password">password</a> 
	</div>
</div>
<div id="uploadform">
	<div class="box">
		<div class="upload">
			<span>New Avatar </span>
			<input type="file" name="image" id="edit-image" accept="image/*" class="form-control input-file">
			<div class="container" style="display:none;">
				<img id="cropper" src="" style="max-height: 300px;"  />
			</div>
		</div>
		<button type="submit" class="submit" disabled id="submit-b">Submit</button>
	</div>
</div>
{% include 'widgets/footer.twig' %}
{% endspaceless %}